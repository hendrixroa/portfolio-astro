---
interface NavItem {
  label: string;
  href: string;
  icon: string;
}

const navItems: NavItem[] = [
  {
    label: "Home",
    href: "/", // Actualizado para navegación de página
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" fill="currentColor"><path d="M21 20C21 20.5523 20.5523 21 20 21H4C3.44772 21 3 20.5523 3 20V9.48907C3 9.18048 3.14247 8.88917 3.38606 8.69972L11.3861 2.47749C11.7472 2.19663 12.2528 2.19663 12.6139 2.47749L20.6139 8.69972C20.8575 8.88917 21 9.18048 21 9.48907V20ZM19 19V9.97815L12 4.53371L5 9.97815V19H19Z"></path></svg>`,
  },
  {
    label: "Projects",
    href: "/projects/", // Actualizado para navegación de página
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" fill="currentColor"><path d="M4 5V19H20V7H11.5858L9.58579 5H4ZM12.4142 5H21C21.5523 5 22 5.44772 22 6V20C22 20.5523 21.5523 21 21 21H3C2.44772 21 2 20.5523 2 20V4C2 3.44772 2.44772 3 3 3H10.4142L12.4142 5Z"></path></svg>`,
  },
  {
    label: "Contact",
    href: "/contact/", // Actualizado para navegación de página
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" fill="currentColor"><path d="M21.7267 2.95694L16.2734 22.0432C16.1225 22.5716 15.7979 22.5956 15.5563 22.1126L11 13L1.9229 9.36919C1.41322 9.16532 1.41953 8.86022 1.95695 8.68108L21.0432 2.31901C21.5716 2.14285 21.8747 2.43866 21.7267 2.95694ZM19.0353 5.09647L6.81221 9.17085L12.4488 11.4255L15.4895 17.5068L19.0353 5.09647Z"></path></svg>`,
  },
   {
      label: "Blog",
      href: "/blog/", // Actualizado para navegación de página
      icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" fill="currentColor"><path d="M21.7267 2.95694L16.2734 22.0432C16.1225 22.5716 15.7979 22.5956 15.5563 22.1126L11 13L1.9229 9.36919C1.41322 9.16532 1.41953 8.86022 1.95695 8.68108L21.0432 2.31901C21.5716 2.14285 21.8747 2.43866 21.7267 2.95694ZM19.0353 5.09647L6.81221 9.17085L12.4488 11.4255L15.4895 17.5068L19.0353 5.09647Z"></path></svg>`,
    },
];

const currentPath = Astro.url.pathname;
---

<div class="flex justify-center w-full">
  <nav
    id="main-nav"
    class="fixed left-1/2 -translate-x-1/2 z-[100] bg-[var(--background)] border border-1 backdrop-blur-xl transition-all duration-500 ease-in-out md:top-6 md:bottom-auto bottom-0 w-[80%]"
  >
    <div class="container mx-auto flex justify-center items-center p-3">
      <ul
        class="flex w-full justify-between md:space-x-6 md:justify-center md:gap-12 gap-6"
      >
        {
          navItems.map((item) => {
            let isActive = false;
            if (item.href === "/") {
              isActive = currentPath === "/";
            } else {
              // Asegura que item.href termine con / si es una ruta de directorio
              const itemBasePath = item.href.endsWith('/') ? item.href : item.href + '/';
              // Asegura que currentPath termine con / para una comparación consistente, excepto si es solo "/"
              const normalizedCurrentPath = currentPath === '/' ? '/' : (currentPath.endsWith('/') ? currentPath : currentPath + '/');
              isActive = normalizedCurrentPath.startsWith(itemBasePath);
            }
            return (
              <li class="flex-1 md:flex-none">
                <a
                  href={item.href}
                  class:list={[
                    "flex flex-col items-center gap-1 text-[var(--white-icon)] transition-colors text-xs md:text-base relative group",
                    { "active": isActive }
                  ]}
                >
                  <div
                    class:list={[
                      "absolute -left-6 top-1/2 -translate-y-1/2 w-2 h-2 rounded-full transition-all duration-300 scale-0 opacity-0 bg-[#A9FF5B] nav-indicator hidden md:block",
                      // La visibilidad del indicador se controla por la clase 'active' en el 'a' padre
                    ]}
                  />
                  <span class="md:hidden flex items-center justify-center w-6 h-6">
                    <fragment set:html={item.icon} />
                  </span>
                  <span class="hidden md:inline-block">{item.label}</span>
                  <span class="md:hidden">{item.label}</span>
                </a>
              </li>
            );
          })
        }
      </ul>
    </div>
  </nav>
</div>
<style>
  nav {
    transform: translateX(-50%);
    background-color: var(--background); /* Asegúrate que --background esté definido globalmente */
    transition:
      background-color 0.3s ease,
      border-radius 0.3s ease,
      border-color 0.3s ease;
    border-color: #ffffff10; /* Borde sutil por defecto */
    border-radius: 9999px;   /* Forma de píldora para escritorio */
  }

  nav a.active .nav-indicator {
    transform: translateY(-50%) scale(1);
    opacity: 1;
  }

  nav a.active {
    color: white !important;
  }

  @media (max-width: 767px) {
    nav {
      width: 100% !important;
      /* transform, bottom, left, position ya están en clases/estilos base */
      border-radius: 1rem 1rem 0 0; /* Radio específico para móvil */
      /* background-color: var(--background); /* Hereda de la regla base de nav */
    }

    body { /* Puede ser necesario si el nav fijo inferior cubre contenido */
      padding-bottom: 70px;
    }
  }
</style>
